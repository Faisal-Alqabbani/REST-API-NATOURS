extends base
block content
    main.main
        .card-container
            each tour in tours
                .card
                    .card__header
                        .card__picture
                            .card__picture-overlay &nbsp;
                            img(src=`img/tours/${tour.imageCover}`, alt=`${tour.name}`).card__picture-img
                        h3.heading-tertirary
                            span=tour.name
                    .card__details
                        h4.card__sub-heading= `${tour.difficulty} ${tour.duration} days `
                        p.card__text= tour.summary
                        .card__data
                            svg.card__icon
                                use(xlink:href='img/icons.svg#icon-flag')
                            sapn= tour.startLocation.description
                        .card__data
                            svg.card__icon
                                use
                                use(xlink:href='img/icons.svg#icon-calendar')
                            sapn= tour.startDates[0].toLocaleString('en-us', {month: 'long', year: 'numeric'})
                        .card__data
                            svg.card__icon
                                use(xlink:href="img/icons.svg#icon-flag")
                            sapn= `${tour.locations.length} steps`
                        .card__data
                            svg.card__icon
                                use(xlink:href="img/icons.svg#icon-user")
                            sapn= `${tour.maxGroupSize} People`
                    .card__footer
                        p
                            sapn.card__footer-value= `$${tour.price}`
                            //- this mark for space | then blank
                            | 
                            span.card__footer-text  per person
                        p.card__ratings
                            span.card__footer-value=tour.ratingsAverage  
                            | 
                            span.card__footer-text= `rating (${tour.ratingsQuantity})`
                        a(href=`/tour/${tour.slug}`).btn.btn--green.btn--small Details





